list = require('nez').objective 'list'

list

    as: 'the essence of a system', (to) -> 
        

        to 'represent a component of myself', (i) ->

            i need: 'a definition of Entity', (feature) -> 
                feature.link 'spec/entity_spec'


        to 'enable purpose', (i) ->

            i need: 'a definition of Information', (feature) -> 
                feature.link 'realization/information'


            i need: 'the capacity to Communicate', (feature) ->
                feature.link 'realization/communication'

